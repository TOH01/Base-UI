Checks: >
  readability-identifier-naming,
  modernize-*,
  clang-analyzer-*,
  performance-*,
  misc-*,
  readability-braces-around-statements,
  readability-function-size,
  readability-magic-numbers,
  readability-else-after-return,
  readability-inconsistent-declaration-parameter-name,
  readability-avoid-const-params-in-decls

WarningsAsErrors: '*'

CheckOptions:
  # Global functions: allow CamelCase + underscores
  - key: readability-identifier-naming.GlobalFunctionPattern
    value: '^[A-Z][a-zA-Z0-9_]*$'

  # Global variables: CamelCase
  - key: readability-identifier-naming.GlobalVariableCase
    value: CamelCase

  # Local variables/functions: camelBack
  - key: readability-identifier-naming.LocalVariableCase
    value: camelBack
  - key: readability-identifier-naming.LocalFunctionCase
    value: camelBack

  # Member variables: camelBack (no prefix enforced)
  - key: readability-identifier-naming.MemberVariableCase
    value: camelBack

  # Classes/structs: CamelCase
  - key: readability-identifier-naming.ClassCase
    value: CamelCase

  # Constants: UPPER_CASE
  - key: readability-identifier-naming.ConstantCase
    value: UPPER_CASE

  # Macros: UPPER_CASE
  - key: readability-identifier-naming.MacroCase
    value: UPPER_CASE

  # Enums: CamelCase for type, UPPER_CASE for values
  - key: readability-identifier-naming.EnumCase
    value: CamelCase
  - key: readability-identifier-naming.EnumConstantCase
    value: UPPER_CASE